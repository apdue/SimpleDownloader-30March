<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFCFC"
    tools:context=".dummy.SecondActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_above="@id/nativeAdTwo"
        android:layout_height="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="@string/hTwo"
                android:textColor="#1C272B"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/reg"
                android:gravity="center_horizontal"
                android:text="@string/bTwo"
                android:textColor="#1C272B"
                android:textSize="18sp" />

            <include layout="@layout/image_layout" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/nativeAdTwo"
        android:layout_width="match_parent"
        android:layout_above="@id/tvNext"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/tvNext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_above="@id/nativeAdLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="#1C272B"
        android:textSize="22sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/nativeAdLayout"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/nativeAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>